# ============================================
# Smart Pantry - Environment Variables Example
# ============================================
# Kopiere diese Datei zu .env und passe die Werte an
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=smart_pantry
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_pantry?schema=public

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=3001
HOSTNAME=0.0.0.0
NODE_ENV=development

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=dev_secret_change_me_in_production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_MS=2592000000
# 2592000000 = 30 Tage in Millisekunden

# ============================================
# Authentication Settings
# ============================================
AUTH_DISABLED=false
# Setze auf 'true' um Authentifizierung zu deaktivieren (nur für Development)

# ============================================
# Demo User (für Development/Testing)
# ============================================
DEMO_USER_EMAIL=demo@smartpantry.app
DEMO_USER_NAME=Demo User
DEMO_USER_PASSWORD=demo123

# ============================================
# Admin Account Configuration
# ============================================
# Der Admin-Account wird automatisch beim Server-Start erstellt
# Ändere diese Werte für Production!
ADMIN_USER_EMAIL=admin@smartpantry.app
ADMIN_USER_NAME=Admin User
ADMIN_USER_PASSWORD=admin123
ADMIN_USER_FULLNAME=Administrator
ADMIN_USER_USERNAME=admin

# ============================================
# API Keys (Externe Services)
# ============================================
# Google Gemini API Key (für Bildanalyse)
# Erhalte den Key von: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Spoonacular Recipe API Key (für Rezeptvorschläge)
# Erhalte den Key von: https://spoonacular.com/food-api
SPOONACULAR_API_KEY=

# ============================================
# Quota & Token Configuration
# ============================================
# Quota Reset Interval (in Millisekunden)
# Standard: 30 Tage = 2592000000
QUOTA_RESET_INTERVAL_MS=2592000000

# LLM Token Costs (pro Request)
LLM_TOKEN_COST_CHAT=1000
LLM_TOKEN_COST_TRANSLATION=500
LLM_TOKEN_COST_ANALYZE=2000

# Recipe API Call Cost
RECIPE_CALL_COST_ANALYZE=1

# ============================================
# Frontend Configuration
# ============================================
# Next.js Public API URL (für Client-Side Requests)
# In Docker: http://smart-pantry-backend:3001
# Lokal: http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Internal API URL (für Server-Side Requests in Next.js API Routes)
# In Docker: http://smart-pantry-backend:3001
# Lokal: http://localhost:3001
NEXT_INTERNAL_API_URL=http://localhost:3001

# Alternative Backend URL (Fallback)
BACKEND_URL=http://localhost:3001
API_INTERNAL_URL=http://localhost:3001

# Frontend Authentication Settings
NEXT_PUBLIC_AUTH_DISABLED=false
NEXT_PUBLIC_USE_MOCK_AUTH=false
